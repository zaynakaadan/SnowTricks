{% block body %}
    {% for trick in tricks %}
        <div class="col-12 col-md-6 col-lg-4 mt-3">
            <div class="card h-100">
                <div class="card-body">
                    <a href="{{ path('tricks_details', {'slug': trick.slug}) }}" class="large-link">
                        {{ trick.name }}
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
