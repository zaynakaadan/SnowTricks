{% extends 'base.html.twig' %}

{% block title %}Détails de {{ trick.name }}!{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>{{ trick.name }}</h1>
            </div>
            <div class="col-6">

                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                    <div class="carousel-indicators">
                    {% for iteration in 1..trick.images|length %}
                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ iteration - 1 }}" {{ (loop.first) ? 'class="active" aria-current="true"' : '' }} aria-label="Slide {{ iteration }}"></button>
                    {% endfor %}


                    </div>
                        <div class="carousel-inner">
                            {% for image in trick.images %}
                                 <div class="carousel-item {{ (loop.first) ? 'active' : '' }}">
                                    <img src="{{ asset('assets/img/') ~ image.name }}" class="d-block w-100" alt="{{ trick.name }}">
                                 </div>
                            {% endfor %}
                        </div>


  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
            </div>
            <div class="col-6">
                <p>{{ trick.description }}</p>
                <p>Catégorie : {{ trick.category.name }}</p>


            </div>
        </section>
    </main>


{% endblock %}